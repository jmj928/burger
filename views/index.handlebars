<h1>Eat-Da-Burger!</h1>


<div class ="row">
    <div class ="column">
        <h2>Undevoured Burgers!</h2>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        <h3>{{burger_name}}  <button data-id="{{this.id}}" class="eatBurg">Eat it!</button> </h3>
                    {{/unless}}
                {{/each}}
            </ul>
    </div>
    <div class ="column">
        <h2>Devoured Burgers!</h2>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        <h3>{{burger_name}} </h3>
                    {{/if}}
                {{/each}}
            </ul>
    </div>
</div>


<h1>Add a Burger</h1>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
